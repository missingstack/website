{
	"name": "missingstack",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"typescript": "^5",
			"zod": "^4.1"
		}
	},
	"scripts": {
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"format": "biome format",
		"format:fix": "biome format --write",
		"check-types": "turbo check-types",
		"check": "npm run lint && npm run format && npm run check-types",
		"fix": "npm run lint:fix && npm run format:fix",
		"dev:web": "turbo -F web dev",
		"db:push": "turbo -F @missingstack/db db:push",
		"db:studio": "turbo -F @missingstack/db db:studio",
		"db:generate": "turbo -F @missingstack/db db:generate",
		"db:migrate": "turbo -F @missingstack/db db:migrate"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/node": "^24.10.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"turbo": "^2.6.1",
		"typescript": "^5"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.2.22"
}
